<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="244dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="@string/resetpassword"
        android:textAlignment="gravity"
        android:gravity="center|center_vertical"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/forget_table"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:stretchColumns="*"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView5">

    <TableRow>
        <TextView
            android:id="@+id/h_msisdn"
            android:text="Mobile No"></TextView>

        <EditText
            android:id="@+id/msisdn"
            android:background="@drawable/edittext_style"
            android:hint="Mobile Number"
            android:inputType="text"></EditText>
    </TableRow>
    <TableRow>
        <TextView
            android:id="@+id/h_email"
            android:text="Email"></TextView>

        <EditText
            android:id="@+id/email"
            android:background="@drawable/edittext_style"
            android:hint="Email"
            android:inputType="text"></EditText>
    </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/h_password"
                android:text="Password"></TextView>
            <EditText
                android:id="@+id/password"
                android:background="@drawable/edittext_style"
                android:hint="Password"
                android:inputType="textPassword"></EditText>
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/h_repassword"
                android:text="Re-Password"></TextView>
            <EditText
                android:id="@+id/repassword"
                android:background="@drawable/edittext_style"
                android:hint="Re-Password"
                android:inputType="textPassword"></EditText>
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/roundedbutton"
        android:defaultFocusHighlightEnabled="true"
        android:backgroundTint="@color/blue"
        android:text="SUBMIT"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/forget_table" />


</androidx.constraintlayout.widget.ConstraintLayout>